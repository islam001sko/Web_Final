<!DOCTYPE html>
<html lang="en">

<head>
    <title>BookSaw - Free Book Store HTML CSS Template</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="/css/style1.css">

</head>

<body data-bs-spy="scroll" data-bs-target="#header" tabindex="0">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Tenth navbar example">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample08"
                aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home">Welcome</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/search">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/news">News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/favorites">Favorites</a>
                    </li>
                    <% if (isLoggedIn) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <%= user.username %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                <li><a class="dropdown-item" href="/logout">Logout</a></li>
                            </ul>
                        </li>
                        <% }%>
                </ul>
            </div>
        </div>
    </nav>
    <section id="billboard">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="main-slider pattern-overlay">
                        <div class="slider-item">
                            <div class="banner-content">
                                <h2 class="banner-title">Welcome to Profile Page</h2>
                                <p>
                                    <%= user.username %>,Welcome to our Profile Page. Here you can see other user's
                                        shared news
                                </p>
                                <a href="#popular-books" class="btn btn-outline-accent btn-accent-arrow">
                                    <div class="btn-wrap">Check Others</div><i class="icon icon-ns-arrow-right"></i>
                                </a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </section>

    <section id="popular-books" class="bookshelf py-5 my-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-header align-center">
                        <div class="title">
                            <span><strong>Shared news of users</strong></span>
                        </div>
                        <h2 class="section-title">Shared News</h2>
                    </div>

                    <!-- Dynamically display books -->
                    <div id="all-genre" class="tab-content active">
                        <div class="row">
                            <% users.forEach(user=> { %>
                                <% if (user.username !=='admin' ) { %>
                                    <div class="card">
                                        <h2>
                                            <%= user.username %>'s shared news
                                        </h2>
                                        <% if (user.sharedNews && user.sharedNews.length> 0) { %>
                                            <% user.sharedNews.forEach(news=> { %>
                                                <div>
                                                    <h3>
                                                        <%= news.title %>
                                                    </h3>
                                                    <img src="<%= news.imageUrl %>" alt="News image"
                                                        style="width: 300px; height: auto;">
                                                </div>
                                                <% }); %>
                                                    <% } else { %>
                                                        <p>No shared news.</p>
                                                        <% } %>
                                    </div>
                                    <% } %>
                                        <% }); %>
                        </div>
                    </div>

                </div><!--inner-tabs-->

            </div>
        </div>
    </section>
    <footer>
        <h1>Islam Zhaslanuly SE-2202</h1>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>



</body>