<!DOCTYPE html>
<html lang="en">

<head>
    <title>BookSaw - Free Book Store HTML CSS Template</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="/css/style1.css">

</head>

<body data-bs-spy="scroll" data-bs-target="#header" tabindex="0">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Tenth navbar example">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample08"
                aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home">Welcome</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/search">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/news">News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/favorites">Favorites</a>
                    </li>
                    <% if (isLoggedIn) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <%= user.username %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                <li><a class="dropdown-item" href="/logout">Logout</a></li>
                            </ul>
                        </li>
                        <% }%>
                </ul>
            </div>
        </div>
    </nav>
    <section id="billboard">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="main-slider pattern-overlay">
                        <div class="slider-item">
                            <div class="banner-content">
                                <h2 class="banner-title">Welcome to Books Page</h2>
                                <p>
                                    Welcome to our Books Page, a curated haven where literature meets diversity and
                                    discovery. Here, you embark on a journey through realms of knowledge, fantasy, and
                                    insight, guided by the voices of acclaimed authors and the stories that have
                                    captivated readers around the globe. Our collection is thoughtfully divided by
                                    category.</p>
                                <a href="#popular-books" class="btn btn-outline-accent btn-accent-arrow">
                                    <div class="btn-wrap">Read More</div><i class="icon icon-ns-arrow-right"></i>
                                </a>
                            </div>
                            <img src="images/main-banner1.jpg" alt="banner" class="banner-image">
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </section>

    <section id="popular-books" class="bookshelf py-5 my-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-header align-center">
                        <div class="title">
                            <span><strong>These Books added by our admin</strong></span>
                        </div>
                        <h2 class="section-title">Popular Books</h2>
                    </div>

                    <!-- Dynamically display books -->
                    <div id="all-genre" class="tab-content active">
                        <div class="row">
                            <% popularBooks.forEach(book=> { %>
                                <div class="col-md-3">
                                    <div class="product-item">
                                        <figure class="product-style">
                                            <img src="<%= book.image %>" alt="Book" class="product-item">
                                        </figure>
                                        <figcaption>
                                            <h3>
                                                <%= book.title %>
                                            </h3>
                                            <span>
                                                <%= book.author %>
                                            </span>
                                        </figcaption>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>

                </div><!--inner-tabs-->

            </div>
        </div>
    </section>


    <section id="books">
        <div class="container mt-5">
            <h1 class="text-center mb-4">Search for Books</h1>
            <form action="/search" method="GET" class="d-flex justify-content-center">
                <div class="form-group w-50">
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter book title"
                        required>
                </div>
                <button type="submit" class="btn btn-primary ms-4">Search</button>
            </form>
        </div>
        <div class="container mt-5">
            <h2 class="mb-4">Search Results</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% books.forEach(book=> { %>
                    <div class="col">
                        <div class="card " style="width: 18rem;">
                            <img src="<%= book.image %>" class="card-img-top" alt="<%= book.title %>">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <%= book.title %>
                                </h5>
                                <p class="card-text">
                                    <%= book.authors.join(', ') %>
                            </p>
                            <button type="button" class="btn btn-outline-accent btn-accent-arrow">
                                <a href="/book-details/<%= book.id %>" class="" style="text-decoration: none;">Read More</a>
                            </button>
                            
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
    <footer><h1>Islam Zhaslanuly SE-2202</h1></footer>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
		crossorigin="anonymous"></script>
	


</body>

</html>